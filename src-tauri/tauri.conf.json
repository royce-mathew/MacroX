{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "MacroX",
  "version": "0.1.0",
  "identifier": "com.r0yce.macrox",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "MacroX - Macro Recorder",
        "width": 1000,
        "height": 700,
        "minWidth": 350,
        "minHeight": 140,
        "center": true,
        "resizable": true,
        "fullscreen": false,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
